<suite name="TicTacToeSuite" time-out="10000" verbose="1">
    <test name="CompleteTests">
        <groups>
            <run>
                <include name="Arbiter"/>
                <include name="Board"/>
                <include name="Answer"/>
                <include name="UI"/>
                <include name="Move"/>
            </run>
        </groups>
        <classes>
            <class name="spyra.lukasz.game.tictactoe.tictactoe.ArbiterTest"/>
            <class name="spyra.lukasz.game.tictactoe.tictactoe.BoardTest"/>
            <class name="spyra.lukasz.game.tictactoe.tictactoe.AnswerTest"/>
            <class name="spyra.lukasz.game.tictactoe.tictactoe.UITest"/>
            <class name="spyra.lukasz.game.tictactoe.tictactoe.MoveTest"/>
        </classes>
    </test>
</suite>